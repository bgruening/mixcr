{
  "name": "@milaboratory/mixcr",
  "version": "0.0.1",
  "description": "MiXCR software dependency for Platforma Backend",
  "scripts": {
    "build": "true",
    "postinstall": "./install-ci.sh",

    "pkg:build": "pl-pkg build packages",
    "pkg:sign": "pl-pkg sign packages --sign-command='[\"gcloud-kms-sign\", \"{pkg}\", \"{pkg}.sig\"]'",
    "pkg:publish": "pl-pkg publish packages",
    "pkg:release": "npm run pkg:build && npm run pkg:sign && npm run pkg:publish",

    "descriptor:build": "pl-pkg build descriptors",
    "descriptor:publish": "pl-pkg publish descriptors",
    "descriptor:release": "npm run descriptor:build && npm run descriptor:publish",

    "release": "npm run pkg:release && npm run descriptor:release"
  },
  "block-software": {
    "packages": {
      "mixcr": {
        "binary": {
          "registry": { "name": "milaboratories" },
          "name": "milaboratories/mixcr",
          "crossplatform": true,
          "type": "java",
          "environment": "@milaboratory/runenv-java-corretto:21.0.2.13.1",
          "root": "./dld/mixcr/",
          "entrypoints": {
            "main": {
              "cmd": [ "java", "-jar", "{pkg}/mixcr.jar" ]
            }
          }
        }
      }
    }
  },
  "files": [
    "dist/"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@milaboratory/pl-package-builder": "^2.6.4",
    "@milaboratory/runenv-java-corretto": "^0.1.1"
  }
}
